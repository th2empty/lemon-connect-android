<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LemonConnect" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_blue</item>
        <item name="colorPrimaryVariant">@color/alice_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_dark</item>
        <item name="colorSecondaryVariant">@color/gray_for_stroke</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">@color/conflower_blue</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textViewStyle">@style/TextViewPrimary</item>
    </style>
    
    <style name="SecondaryText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>
    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>
    <style name="TextButtonPrimary" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>
    <style name="Button.Borderless" parent="ButtonPrimary">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
    </style>
    <style name="EditTextPrimary" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>
    <style name="TextViewPrimary" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>